#define memorydepth 5000
#include "/home/henrique/Dropbox/Unicamp/Doutorado/Root/Programs/italy/ADC_LAr_SuperCell/class/MYCODES.h"


void adc_read_all_data(){
    
    system("rm files.txt");
    system("ls -1 *.dat| sed -e 's/.dat$//' > files.txt");
    
    Read r;
        
    r.dtime = 4; // dtime = 4 ns, or 2 ns, or any other
    r.nbits = 14;
    r.isBinary = true;
    
    r.baselineTime = 5000; // time limit for baseline in ns
    r.chargeTime = 7000; // last time to integrate 
    r.startCharge = 5600;
    r.maxRange = 7000; // max range to search for amplitude peak
    r.fast = 600; // fprompt fast integration time
    r.slow = 6600; //fprompt slow integration time
    r.exclusion_baseline = 10; // filtered waveform, anything above here will do +exclusion window
    r.exclusion_window = 500; // time in ns that it will jump for baseline
    r.filter = 25; // denoise filter.. if filter = 0, no denoise is done. 
    r.OnlyOneEvent = false; // Do you want only one event? Choose it wisely 
    r.stopEvent = 100;
      
    r.channels = {1};
    
    
    r.adc_read_all_data();

    
}

